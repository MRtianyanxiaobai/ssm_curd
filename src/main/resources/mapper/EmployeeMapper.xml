    </if>
  </select>
  <select id="selectByPrimaryKeyWithDept" parameterType="java.lang.Integer" resultMap="WithDepResultMap">
    select
    <include refid="WithDep_Column_List"></include>
    from tbl_emp e
    left join tbl_dept d on e.`d_id`=d.`dept_id`
    where stu_id= #{empId,jdbcType=INTEGER}
